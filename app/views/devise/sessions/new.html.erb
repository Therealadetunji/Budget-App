<%= render 'layouts/login' %>
<div class="d-flex flex-column align-items-center">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "w-100 mt-3"}) do |f| %>
  <div class="field text-light mb-2">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100 rounded-0 form-control",placeholder: "Email"  %>
  </div>

  <div class="field text-light mb-2">
    <%= f.password_field :password, autocomplete: "current-password",class: "w-100 rounded-0 form-control", placeholder: "Password" %>
  </div>
  

  <div class="actions text-center mb-3">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>