<%= render 'layouts/signup' %>
<div class="d-flex flex-column align-items-center">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "w-100 mt-3"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mb-2">
    <%= f.text_field :name, autofocus: true, class: "w-100 rounded-0 form-control",placeholder: "Enter Full Name"%>
  </div>

  <div class="field mb-2">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: "w-100 rounded-0 form-control",placeholder: "Email" %>
  </div>

  <div class="field mb-2">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",  class: "w-100 rounded-0 form-control",placeholder: "Password" %>
  </div>

  <div class="field mb-2">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",  class: "w-100 rounded-0 form-control",placeholder: "Password" %>
  </div>

  <div class="actions text-center">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>