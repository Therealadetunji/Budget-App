<% if user_signed_in? %>
<div class="d-flex justify-content-between text-light p-2">
    <%= link_to 'Back', groups_path %>
  </div>
    <h3 class="d-flex justify-content-center text-light">Transactions</h3>
<div class="d-flex justify-content-center text-light">
    <h4>Most Recent</h4>
</div>
<div class="d-flex justify-content-end text-light">
    <h4>Total Amount: <%= @total_amount%></h4>
</div>



   <% if @entities.count > 0 %>
   <% @entities.each do |entity| %>
<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title"><%= entity.name%></h5>
        <p class="card-text d-flex justify-content-end "> $<%=entity.amount%></p>
    </div>
</div>
<% end %>
<% else %>
<p>No Transactions</p>
<% end %>
<% end %>
<div>
    <%= link_to 'Add a Transaction', new_group_entity_path, class: "btn btn-secondary" %>
</div>